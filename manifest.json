{
  "manifest_version": 3,
  "name": "AWS Auto Registration",
  "version": "1.0.0",
  "description": "AWS Builder ID 自动注册工具",
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "tabs",
    "windows",
    "identity",
    "offscreen",
    "proxy"
  ],
  "oauth2": {
    "client_id": "YOUR_CLIENT_ID",
    "scopes": [
      "https://www.googleapis.com/auth/gmail.readonly"
    ]
  },
  "host_permissions": [
    "https://*.signin.aws/*",
    "https://*.aws.amazon.com/*",
    "https://signin.aws.amazon.com/*",
    "https://*.amazonaws.com/*",
    "https://mailfly.codeforge.top/*",
    "https://view.awsapps.com/*",
    "https://api.guerrillamail.com/*",
    "http://api.guerrillamail.com/*",
    "https://mail.chatgpt.org.uk/*",
    "https://*.chatgpt.org.uk/*",
    "https://api.duckmail.sbs/*",
    "https://*.duckmail.sbs/*",
    "https://mail.112857.xyz/*",
    "https://*.112857.xyz/*",
    "https://ipinfo.io/*",
    "https://ipwhois.app/*",
    "https://api.ip.sb/*"
  ],
  "optional_host_permissions": [
    "https://*/*"
  ],
  "incognito": "spanning",
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background/service-worker.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.signin.aws/*",
        "https://*.aws.amazon.com/*",
        "https://signin.aws.amazon.com/*",
        "https://*.amazonaws.com/*",
        "https://view.awsapps.com/*"
      ],
      "js": [
        "content/content.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "key": ""
}
